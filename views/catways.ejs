<%- include('head') %>
<link rel="stylesheet" href="/css/catways.css">
</head>
<body class="bg-gray-100 body overflow-hidden">
    <%- include('header') %>
    <div class="container mx-auto px-4 py-8">
        <nav class="bg-white shadow-lg rounded-lg p-4 mb-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="text-2xl font-bold">Liste des catways</h1>
                <a href="/dashboard" class="text-blue-500 hover:text-blue-600">← Retour au tableau de bord</a>
            </div>
        </nav>

        <div class="rounded-lg shadow p-6 cadre">
            <!-- Conteneur défilable avec une hauteur fixe agrandie -->
            <div class="overflow-y-auto  " style="max-height: 810px;">
                <div class="row">
                    <% catways.forEach(catway => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    Catway <%= catway.catwayNumber %>
                                </div>
                                <div class="card-body">
                                    <div class="font-semibold">Numéro: <%= catway.catwayNumber %></div>
                                    <div class="font-semibold">Type: <%= catway.type %></div>
                                    <div class="font-semibold">État: <%= catway.catwayState %></div>
                                </div>
                                <div class="card-footer text-end">
                                    <a href="/catways/<%= catway._id %>" class="btn btn-primary">Détails</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
