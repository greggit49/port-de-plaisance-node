<%- include('head') %>
<link rel="stylesheet" href="/css/users.css">
</head>
<body class="bg-gray-100 body">
    <%- include('header') %>
    <div class="container mx-auto px-4 py-8">
        <!-- Barre de navigation avec titre et lien retour -->
        <nav class="bg-white shadow-lg rounded-lg p-4 mb-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="text-2xl font-bold">Liste des utilisateurs</h1>
                <a href="/dashboard" class="text-blue-500 hover:text-blue-600">← Retour au tableau de bord</a>
            </div>
        </nav>

        <!-- Conteneur principal avec fond blanc, bord arrondi et ombre -->
        <div class="bg-white rounded-lg shadow p-6">
            <table class="table table-striped w-full">
                <thead>
                    <tr>
                        <th scope="col" class="p-2">Nom</th>
                        <th scope="col" class="p-2">Email</th>
                        <th scope="col" class="p-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="p-2 border-t border-gray-200"><%= user.name %></td>
                            <td class="p-2 border-t border-gray-200"><%= user.email %></td>
                            <td class="p-2 border-t border-gray-200">
                                <form action="/users/delete" method="POST" class="d-inline">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button class="btn btn-danger btn-sm bg-red-500 text-white ">
                                        Supprimer
                                    </button>
                                </form>
                            </td>                        
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
