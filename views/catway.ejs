<%- include('head') %>
<link rel="stylesheet" href="/css/catway.css">
</head>
<body class="bg-gray-100 body">
    <%- include('header') %>
    <div class="container mx-auto px-4 py-8">
        <nav class="bg-white shadow-lg rounded-lg p-4 mb-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="text-2xl font-bold">Détails du catway</h1>
                <a href="/catways" class="text-blue-500 hover:text-blue-600">← Retour à la liste</a>
            </div>
        </nav>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="row">
                <div class="col-md-6 font-semibold">Numéro de catway:</div>
                <div class="col-md-6"><%= catway.catwayNumber %></div>
                
                <div class="col-md-6 font-semibold">Type:</div>
                <div class="col-md-6"><%= catway.type %></div>
                
                <div class="col-md-6 font-semibold">État:</div>
                <div class="col-md-6"><%= catway.catwayState %></div>
                
                <div class="col-md-6 font-semibold">Créé le:</div>
                <div class="col-md-6"><%= new Date(catway.createdAt).toLocaleDateString() %></div>
                
                <div class="col-md-6 font-semibold">Mis à jour le:</div>
                <div class="col-md-6"><%= new Date(catway.updatedAt).toLocaleDateString() %></div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
