<%- include('head') %>
<link rel="stylesheet" href="/css/reservation.css">
</head>
<body class="bg-gray-100 body">
    <%- include('header') %>
    <div class="container mx-auto px-4 py-8">
        <nav class="bg-white shadow-lg rounded-lg p-4 mb-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="text-2xl font-bold">Détails de la réservation</h1>
                <a href="/reservations" class="text-blue-500 hover:text-blue-600">← Retour à la liste</a>
            </div>
        </nav>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="row">
                <div class="col-md-6 font-semibold">Numéro de catway:</div>
                <div class="col-md-6"><%= reservation.catwayNumber %></div>
                
                <div class="col-md-6 font-semibold">Client:</div>
                <div class="col-md-6"><%= reservation.clientName %></div>
                
                <div class="col-md-6 font-semibold">Bateau:</div>
                <div class="col-md-6"><%= reservation.boatName %></div>
                
                <div class="col-md-6 font-semibold">Check-in:</div>
                <div class="col-md-6"><%= new Date(reservation.checkIn).toLocaleDateString() %></div>
                
                <div class="col-md-6 font-semibold">Check-out:</div>
                <div class="col-md-6"><%= new Date(reservation.checkOut).toLocaleDateString() %></div>
                
                <div class="col-md-6 font-semibold">Créée le:</div>
                <div class="col-md-6"><%= new Date(reservation.createdAt).toLocaleDateString() %></div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
